# Application
APP_NAME=Lumi Backend
DEBUG=False

# CORS
CORS_ORIGINS=["http://localhost:4201", "http://localhost:3000"]

# SurrealDB
SURREAL_URL=ws://localhost:8000/rpc
SURREAL_NAMESPACE=lumi
SURREAL_DATABASE=lumi
SURREAL_USERNAME=root
SURREAL_PASSWORD=root

# MinIO / S3
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=lumi-papers
S3_REGION=us-east-1
S3_USE_SSL=False

# Storage mode: "local" or "s3"
STORAGE_MODE=local
LOCAL_STORAGE_PATH=../local_image_bucket

# LiteLLM
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_MODEL=gpt-4.1-2025-04-14

# Import Pipeline
MAX_LATEX_CHARACTER_COUNT=300000
ARXIV_ID_MAX_LENGTH=20
MAX_QUERY_LENGTH=1000
MAX_HIGHLIGHT_LENGTH=100000
MAX_USER_FEEDBACK_LENGTH=1000

# Background Tasks
IMPORT_TIMEOUT_SECONDS=540
IMPORT_TIMEOUT_BUFFER=10
